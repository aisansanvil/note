<div class="container">
  <div class="col-md-6 col-md-offset-3 col-sm-10 col-sm-offset-1">
    <p id="notice"><%= notice %></p>
    <%= form_for(@contact, url: confirm_contacts_path) do |f| %>

    <% if @contact.errors.any? %>
    <div id="error_explanation">
      <!--バリデーションエラーの件数を表示します。-->
      <h2><%= @contact.errors.count %>件のエラーがあります。</h2>
        <ul>
      <!--@contact.errorsは@blogをバリデーションした際のエラー情報です。-->
      <!--full_messagesは複数のエラーメッセージを表します。-->

        <% @contact.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
    </div>
    <% end %>

    <%= f.label :お名前 %>
    <%= f.text_field :name %>
    <br /><br />

    <%= f.label :メールアドレス %>
    <%= f.text_field :email %>
    <br /><br />

    <%= f.label :お問い合わせ内容 %>
    <%= f.text_field :content %>
    <br /><br />

    <%= f.submit '送信' , class: 'btn btn-primary' %>
    <% end %>

    <%= link_to "TOPに戻る", blogs_path %>
  </div>
</div>
