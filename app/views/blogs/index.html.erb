<div class="container">
  <div class="wrapper col-md-8 col-md-offset-2 col-sm-10">
    <div class="starter-template">
      <p><%= notice %></p>

      <h1>My Notes</h1>

      <% @blogs.each do |blog| %>
        <p>タイトル:<%= blog.title %></p>
        <p><%= image_tag (blog.picture) %></p>
        <p>本文:<%= blog.content %></p>
        <p><%= link_to "編集", edit_blog_path(blog.id), class: 'btn btn-primary btn-sm', data: { confirm: '本当に編集していいですか？' } %>
        <%= link_to "削除", blog_path(blog.id), method: :delete, class: 'btn btn-default btn-sm', data: { confirm: '本当に削除していいですか？' } %></p>

      <% end %>

      <%= link_to "今日のMy Note", new_blog_path %>
    </div>
  </div>
</div>
